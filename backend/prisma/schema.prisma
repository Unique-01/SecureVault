generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  walletAddress String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
}

model AuthNonce {
  walletAddress String
  nonce         String
  expiresAt     DateTime

  @@id([walletAddress])
}

model VaultEvent {
  id            String   @id @default(uuid())
  walletAddress String
  eventType     String
  amount        Decimal?
  txHash        String   @unique
  blockNumber   Int
  timestamp     DateTime
}

model IndexerState {
  id        String @id
  lastBlock BigInt
}
