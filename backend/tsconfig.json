{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@modules/*": ["modules/*"],
            "@prisma/*": ["prisma/*"],
        }
    }
}
