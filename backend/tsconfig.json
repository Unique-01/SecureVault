{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@modules/*": ["src/modules/*"],
            "@prisma/*": ["src/prisma/*"],
            "@middlewares/*": ["src/middlewares/*"]
        }
    }
}
